.topTabs {
  display: flex;
  height: 36px;
  color: #737373;
  background: #fff;
  position: fixed;
  line-height: 36px;
  top: 0;
  width: 100%;
  z-index: 999;
}
li {
  flex: 1;
  text-align: center;
  font-size: 18px;
  font-family: '微软雅黑';
  font-weight: bold;
}

.tabSelected {
  color: red;
  border-bottom: 1px solid red;
}

.normalTab {
  color: #000;
  border-bottom: 1px solid #737373;
}

.videoScrollList {
  height: 100%;
}

.singleVideo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.videoPoster {
  display: flex;
  width: 100%;
  justify-content: center;
  position: relative;
}

.videoPoster>image {
  width: 95%;
  margin-top: 15px;
  border-radius: 5px;
}

.videoName {
  position: absolute;
  width: 95%;
  bottom: 0px;
  color: #fff;
  background-color: rgba(24, 23, 23, 0.5);
  /* 左上角  右上角  右下角  左下角   （顺时针） */
  border-radius: 0px 0px 8px 8px;
  display: flex;
  justify-content: center;
}

.videoName>text {
  width: 95%;
  font-size: 22px;
  font-family: '微软雅黑';
}

.videoInfo {
  padding-left: 5px;
  padding-right: 5px;
  width: 85%;
  display: flex;
  color: #737373;
  font-size: 20px;
  text-align: left;
  height: 50px;
  justify-content: center;
  align-items: center;
  margin-bottom: 10px;
  font-family: '微软雅黑';
}
.jia{
  width: 88%;
  margin: 0 auto;
  margin-top: 10rpx;
}
.jiaTitle{
font-size: 32rpx;
}
.jiaContent{
  font-size: 26rpx;
  margin: 10rpx 0;
  text-indent: 2rem;
}