.video{
  width: 100%;
}
.videoTop {
  display: flex;
  width: 100%;  
  justify-content: center;
  align-items: center;
}

.videoTopInfo {
  flex-direction: column;
  display: flex;
  flex:1;
  width: 98%;
}

.videoTopTitle {
  font-size: 22px;
  font-weight: bold;
  font-family: '微软雅黑';
}

.videoCreateTime {
  padding-top: 5px;
  font-size: 16px;
  color: #737373;
  font-family: '微软雅黑';
}

.videoList {
  margin-top: 5px;
}

.singleVideo {
  display: flex;
  width: 100%;
  padding-top: 10px;
  padding-bottom: 10px;
  border-bottom: 1px solid #c9c7c7;
  justify-content: center;
  align-items: center;
}

.imgContainer {
  display: flex;
  width: 50%;
  justify-content: center;
  align-items: center;
}

.videoImg {
  width: 95%;
  border-radius: 5px;
}

.videoInfo {
  width: 50%;
  display: flex;
}

.videoTitle {
  width: 98%;
  font-size: 20px;
  font-family: '微软雅黑';
}

.bottomBtn {
  width: 100%;
  display: flex;
  margin-top: 15px;
}

.indexBtn {
  background-color: #1aac19;
}

.recommendBtn {
  background-color: #e86060;
}

.sendToCommon>image {
  padding-right: 10px;
  width: 25px;
  height: 25px;
}

.btnStyle>text {
  padding-left: 5px;
}

.shareView {
  width: 100%;
  display: flex;
  background-color: #000;
  font-family: '微软雅黑';
  justify-content: space-around;
  padding-top: 5px;
  padding-bottom: 5px;
}

.sendToCommon {
  font-size: 18px;
  width: 45%;
  color: #f7ffff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.sendToFriend {
  background-color: #1aac19;
}

.sendToCrowd {
  background-color: #e86060;
}

.recommendTitle {
  display: flex;
  justify-content: center;
  align-items: center;
  color: red;
  font-size: 24px;
}

.titleIconStyle {
  padding-left: 5px;
  padding-right: 5px;
  width: 52px;
  height: 20px;
}

.guideView {
  margin-top: 10px;
  display: flex;
  justify-content: center;
  background-color: red;
  align-items: center;
}

.guideView>text {
  padding-top: 5px;
  padding-bottom: 5px;
  color: white;
  font-size: 22px;
  font-family: '微软雅黑';
  text-align: center;
}

.guideView>image {
  padding-left: 10px;
  width: 35px;
  height: 35px;
  animation: fingerHandle 1s ease infinite both;
}

@keyframes fingerHandle {
  0% {
    transform: none;
  }

  70% {
    transform: scale3d(0.8, 0.8, 0.8);
  }

  100% {
    transform: none;
  }
}

.guideImg {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 1000;
  top: 0px;
  left: 0px;
  right: 0px;
  bottom: 0px;
}
.guideImg>image {
  width: 100%;
  height: 100%;
}
.videoCover{
  width: 100%;
  height: 100%;
  background-color: black;
  display: flex;
  justify-content:center;
  align-items: center;
}
.btnView{
  width: 70px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
  height: 120px;
  margin-left: 30px;
  margin-right: 30px;
}
.btnImg{
  width: 70px;
  height:70px;
}
.btnText{
  padding: 15px;
  color: white;
}
.shareBtn{
  position: absolute;
  left: 0;
  right: 0;
  top:0;
  bottom: 0;
  opacity:0;
}

.goback{
  width:120rpx;
  background-color: #1aac19;
  color:#fff;
  border-radius:8rpx;
  font-size:28rpx;
  height:50rpx;   
  line-height:50rpx;
  text-align:center;
  margin-right:15rpx;
}
